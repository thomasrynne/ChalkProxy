if [ -z $JAVA_HOME ]; then
  echo "JAVA_HOME must be set"
  exit 1
fi
if [ -z $SCALA_HOME ]; then
  echo "SCALA_HOME must be set"
  exit 1
fi
ROOT=`dirname $0`
cd $ROOT
if [ ! -d "out" ]; then
  mkdir out
fi
$SCALA_HOME/bin/scalac -classpath "lib/*" -d out -deprecation -sourcepath src src/chalkproxy/*
$JAVA_HOME/bin/javac -classpath "lib/*:out" -d out -sourcepath src src/chalkproxy/*.java